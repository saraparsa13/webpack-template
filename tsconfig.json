{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "build",
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
